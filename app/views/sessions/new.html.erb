<h1>Log In</h1>

<%= form_with url: login_path, local: true do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Log In" %>
  </div>
<% end %>

<%= link_to "Sign Up", new_user_path %>
